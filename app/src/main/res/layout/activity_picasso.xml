<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.myapplication.PicassoActivity">

    <EditText
        android:id="@+id/picassoEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="https://www.picsum.photos/200/300/?random"
        />

    <Button
        android:id="@+id/picassoBtnGet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/picassoEt"
        android:layout_marginTop="6dp"
        android:text="Take Image" />

    <ImageView
        android:id="@+id/picassoIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
         />

</RelativeLayout>
